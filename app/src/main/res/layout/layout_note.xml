<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.gplibs.magicsurfaceview.MagicSurfaceView
        android:id="@+id/magic_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.jacky.commondraw.views.doodleview.DoodleView
        android:id="@+id/doodleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8fff" >
    </com.jacky.commondraw.views.doodleview.DoodleView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_move"
        app:srcCompat="@color/colorAccent"
        android:layout_width="20dp"
        android:layout_height="20dp"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_scale"
        app:srcCompat="@color/colorPrimary"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="end"
        android:id="@+id/iv_exit"
        app:srcCompat="@color/colorExit"
        android:layout_width="20dp"
        android:layout_height="20dp"/>


    <include
        android:visibility="gone"
        android:id="@+id/layout_scale"
        layout="@layout/layout_scale"/>



</FrameLayout>